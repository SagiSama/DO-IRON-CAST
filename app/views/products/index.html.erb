<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Product Index <small>list product.</small></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to '/Product index', products_path %>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper-content ecommerce">
  <div class="ibox-content m-b-sm border-bottom">
    <div class="row">
      <div class="col-sm-2">
        <%= link_to 'New', new_product_path, class: "btn btn-success btn-facebook btn-outline" %>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="col-form-label" for="product_name">Title</label>
          <input type="text" id="product_name" name="product_name" value="" placeholder="Name" class="form-control">
        </div>
      </div>
      <div class="col-sm-2">
        <div class="form-group">
          <label class="col-form-label" for="price">Subject</label>
          <input type="text" id="price" name="price" value="" placeholder="Note" class="form-control">
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="col-form-label" for="status">Status</label>
          <select name="status" id="status" class="form-control">
            <option value="1" selected="">Enabled</option>
            <option value="0">Disabled</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">
          <table class="table table-stripped">
            <thead>
            <tr>
              <th>Images</th>
              <th>Title</th>
              <th>Subject</th>
              <th>Status</th>
              <th class="text-right">Action</th>
            </tr>
            </thead>
            <tbody>
            <% @products.each do |product| %>
              <tr class="footable-even">
                <td>
                  <% if product.images.attached? %>
                    <% product.images.each do |image| %>
                      <%= image_tag(url_for(image), class: "img-thumbnail", style: "width:8em; height:6em;") %>
                    <% end %>
                  <% end %>
                </td>
                <td><div class="icheckbox_square-green checked" style="position: relative;"><%= product.name %></div></td>
                <td><small><%= product.price %></small></td>
                <td class="footable-visible">
                  <% if product.enable? %>
                    <span class="label label-primary"><%= product.status %></span>
                  <% else %>
                    <span class="label label-danger"><%= product.status %></span>
                  <% end %>
                </td>
                <td class="text-right">
                  <div class="btn-group">
                    <%= link_to 'Show', product_path(product), class: "btn-white btn btn-xs" %>
                    <%= link_to 'Edit', edit_product_path(product), class: "btn-white btn btn-xs" %>
                    <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-white btn btn-xs btn-danger btn-outline" %>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
            <tr>
              <td colspan="6" class="footable-visible">
                <ul class="pagination float-right">
                  <li class="footable-page-arrow"><a data-page="first" href="#first">«</a></li>
                  <li class="footable-page-arrow"><a data-page="prev" href="#prev">‹</a></li>
                  <li class="footable-page"><a data-page="0" href="#">1</a></li>
                  <li class="footable-page active"><a data-page="1" href="#">2</a></li>
                  <li class="footable-page-arrow disabled"><a data-page="next" href="#next">›</a></li>
                  <li class="footable-page-arrow disabled"><a data-page="last" href="#last">»</a></li></ul>
              </td>
            </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>