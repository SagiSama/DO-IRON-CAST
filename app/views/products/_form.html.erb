<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :note %>
  <%= f.text_area :note %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= label :contactmethod_email, 'Active' %>
  <%= f.radio_button :status, :active, checked: true %>
  <%= label :contactmethod_sms, 'Inactive' %>
  <%= f.radio_button :status, :inactive %>
  <%= f.submit "Submit" %>
<% end %>
