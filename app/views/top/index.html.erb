    <span class="sr-only">Next</span>
  </a>
</div>
<br/>

<section id="product" class="bg-white">
  <div class="container">
    <div class="card-columns">
      <% @products.each do |p| %>
        <div class="card">
          <%= image_tag 'product.png', class: "card-img-top", alt: "product" %>
          <div class="card-body">
            <h5 class="card-title"><%= p.name %></h5>
            <p class="card-text"><%= p.note %></p>
            <footer class="blockquote-footer">
              <small class="text-muted">
                <%= p.price %> <cite title="Source Title"><%= p.status %></cite>
              </small>
            </footer>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
