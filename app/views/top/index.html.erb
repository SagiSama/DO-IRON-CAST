<div class="one-item">
  <div class="slideshow-container">
    <% index = 0 %>
    <% @products.each do |p| %>
      <div class="mySlides fade container">
        <div class="numbertext"><%= index += 1 %> / <%= @products_count %></div>
        <%= image_tag 'img_nature_wide.jpg' %>
        <div class="content">
          <h1><%= p.name %></h1>
          <p><%= p.note %></p>
        </div>
      </div>
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    <% end %>
  </div>

  <div class="dot_preview">
    <% index = 0 %>
    <% @products.each do |p| %>
      <span class="dot" onclick="currentSlide(<%= index += 1%>)"></span>
    <% end %>
  </div>
</div>

<div class="one-item">
  <h2 style="text-align:center; padding-top: 30px">Бүтээгдэхүүн</h2>
  <div class="product">
    <% index = 0 %>
    <% @products.each do |p| %>
      <div class="card">
        <%= image_tag 'img_lights_wide.jpg', :class => "product_icon" %>
        <h1 class="title"><%= p.name %></h1>
        <p class="note"><%= p.note %></p>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_pack_tag 'top/index' %>
<script>
    window.setInterval(function(){
        plusSlides(1);
    }, 5000);

    var slideIndex = 1;

    showSlides(slideIndex);

    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) {slideIndex = 1}
        if (n < 1) {slideIndex = slides.length}
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex-1].style.display = "block";
        dots[slideIndex-1].className += " active";
    }
</script>
